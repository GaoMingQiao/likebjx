{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}

<div class="container">
<a class="text-danger" href="{{ path('app_admin_produit_new') }}">Create new</a>
</div>

    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>ImageName</th>
                <th>Category</th>
                <th>Commande</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.imageName }}</td>
                <td>{{ produit.category.nom }}</td>
                {# <td>{{ produit.detailCommandes.id }}</td> #}
                <td>
                    <a href="{{ path('app_admin_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">edit</a>
                    <a href="{{ path('app_admin_produit_delete', {'id': produit.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
