{% extends 'base.html.twig' %}

{% block title %}Gerer mes adresses{% endblock %}

{% block body %}
{{ dump() }}
{% if app.user.adresse|length==0 %}
<p>
    Vous n'avez pas d'adresses.
</p>
{% else %}
<div class="container my-4">
  <h1>Mes adresses</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">nom</th>
      <th scope="col">prenom</th>
      <th scope="col">Adress</th>
      <th scope="col">Complement</th>
      <th scope="col">Code postal</th>
      <th scope="col">ville</th>
      <th scope="col">Actions</th> 
    </tr>
  </thead>
  <tbody class="table-group-divider">
    
    
      {% for adresse in adresses %}
       
          <tr>
                <td>
                    <div class="form-check"><input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" value="{{adresse.id }}">
                      {# <label class="form-check-label" for="flexRadioDefault1"></label> #}
                    </div>
                </td>
                <td>{{adresse.user.nom }}</td>
                <td>{{adresse.user.prenom }}</td>
                <td>{{adresse.adresse }}</td>
                <td>{{adresse.complement }}</td>
                <td>{{adresse.codePostal }}</td>
                <td>{{adresse.ville }}</td> 
                <td>ACTION</td> 
            </tr> 
  {% endfor %}
       
       
     
      
      
  


                    {# <td>
                    <a href="{{ path('app_admin_category_show', {'id': adresse.id}) }}">edit</a>
                    <a href="{{ path('app_admin_category_edit', {'id': adresse.id}) }}">delete</a>
                   </td>
         
         #}


{% endif %}
    </tbody>
</table>
<a type="button" class="btn btn-success" id="valideAdresse">Choisir son adresse.</a>
</div>
{% endblock %}

{% block javascripts %}
<script>
    $( document ).ready(function() {
        $("#valideAdresse").click(function(){
           var radioChecked = $("input[name='flexRadioDefault']:checked").val();
           if(radioChecked){
              alert("Ok");
           }else{
              alert("not");
           }
        });
    });
</script>

{% endblock %}
