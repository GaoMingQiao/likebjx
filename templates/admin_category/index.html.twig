{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
<div class="container">
    <h1>Category List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>ImageName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nom }}</td>
                <td>{{ category.description }}</td>
                <th scope="row"><img class="product-thumbnail" src="{{ vich_uploader_asset(category,'imageFile')}}" alt="bijoux"/></th>
                <td>
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}">Create new</a>
</div>
{% endblock %}
